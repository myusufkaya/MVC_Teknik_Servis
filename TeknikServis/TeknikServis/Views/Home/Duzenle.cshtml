@model TeknikServis.Models.Musteri  
@if (ViewBag.Sonuc != null)
{
    <div class="alert alert-success alert-dismissible">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        <h5><i class="icon fa fa-check"></i> Tebrikler!</h5>
        @ViewBag.Sonuc
    </div>
}


<div class="card card-success">
    <div class="card-header">
        <h3 class="card-title">Musteri Ekle</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    @using (Html.BeginForm())
    {
        <input type="hidden" name="Mus_ID" value="@Model.Mus_ID" />

        <div class="card-body">
            <div class="form-group">
                <label for="exampleInputEmail1">TC</label>
                <input type="text" class="form-control" name="tc" placeholder="TC giriniz" value="@Model.TC">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Ad</label>
                <input type="text" class="form-control" name="ad" placeholder="Adınızı giriniz" value="@Model.Ad">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Soyad</label>
                <input type="text" class="form-control" name="soyad" placeholder="Soyadını giriniz" value="@Model.Soyad">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Adres</label>
                <input type="text" class="form-control" name="adres" placeholder="Adres giriniz" value="@Model.Adres">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Mail</label>
                <input type="text" class="form-control" name="Mail" placeholder="Mail giriniz" value="@Model.Mail">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Telefon</label>
                <input type="text" class="form-control" name="Telefon" placeholder="Telefon giriniz" value="@Model.Telefon">
            </div>

        </div>
        <!-- /.card-body -->

        <div class="card-footer">
            <button type="submit" class="btn btn-success">Kaydet</button>
        </div>
    }

</div>